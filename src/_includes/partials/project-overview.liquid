<div class="section-header">
  <h2>Alle Projekte</h2>
  <hr />
</div>

<section class="grid md:grid-cols-2 gap-4">
  {% for project in collections.projects %}
  <a
    href="{{ project.url }}"
    class="p-4 bg-white shadow-md grid grid-cols-2 gap-2"
  >
    <!-- <img src="/assets/images/projects/{{  }}" alt="Alt text" /> -->
    <div>
      <h3>{{ project.data.title }}</h3>
      <p class="text-gray-900">{{ project.data.abstract }}</p>
      {% if project.data.link %}<small>{{ project.data.link }}</small
      >{% endif %}
    </div>
  </a>
  {% endfor %}
</section>
